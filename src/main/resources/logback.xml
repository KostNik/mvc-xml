<configuration>

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%yellow(%d{dd-MM-yyyy HH:mm:ss}) %magenta([%thread]) | %highlight(%-5level) | %logger{36}.%M %red(|) %msg%n</pattern>
        </encoder>
    </appender>
    <root level="info">
        <appender-ref ref="STDOUT" />
    </root>
</configuration>